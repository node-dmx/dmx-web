html
  head

    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="apple-mobile-web-app-capable" content="yes")

    title DMX WEB

    //- Load vendor css
    link(rel="stylesheet" href="/vendor/css/bootstrap.min.css" crossorigin="anonymous")
    link(rel="stylesheet" href="/vendor/fontawesome-free-5.7.2-web/css/all.css" crossorigin="anonymous")
    
    //- Load custom css
    link(rel="stylesheet" href="/css/main.css")

    //- Load vendor js
    script(src="/vendor/js/jquery-3.3.1.slim.min.js" crossorigin="anonymous")
    script(src="/vendor/js/popper.min.js" crossorigin="anonymous")
    script(src="/vendor/js/moment.min.js" crossorigin="anonymous")
    script(src="/vendor/js/bootstrap.min.js" crossorigin="anonymous")
    script(src="/vendor/js/jquery.ba-throttle-debounce.min.js")

    //- Load socket.io
    script(src="/socket.io/socket.io.js")

  body

    //- Build navbar
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      a.navbar-brand(href="#") DMX WEB
      
      .btn-group.d-md-block.d-lg-none
        button.btn.btn-danger.dmx-scene-trigger(scene_id="default-blackout") Blackout
        button.navbar-toggler(type="button" data-toggle="collapse" data-target="#main-navbar" aria-controls="main-navbar" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon

      div.collapse.navbar-collapse#main-navbar
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href="#control") Control
          
          if !!config.allowEditing
            li.nav-item
              a.nav-link(href="#edit") Editor
          
          li.nav-item
            a.nav-link(href="#sliders") Simple Sliders

        button.d-none.d-lg-block.btn.btn-danger.dmx-scene-trigger(scene_id="default-blackout")="Blackout"
        
    // Build content
    .tab-content#main-content-tabs
      .tab-pane#control
        include includes/control.pug

      - if(!!config.allowEditing)
        .tab-pane#edit
          include includes/editor.pug
          
      .tab-pane#sliders
        include includes/sliders.pug

  // Load custom JS
  script(src="/js/navbar.js")
  script(src="/js/socket.js")
  script(src="/js/slider.js")
  script(src="/js/control.js")
  script(src="/js/editor/editor-static-renderer.js")
  script(src="/js/editor/editor-animation-renderer.js")
  script(src="/js/editor/editor.js")
  script(src="/js/main.js")
